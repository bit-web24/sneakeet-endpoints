<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.15/dist/tailwind.min.css" rel="stylesheet">
  <title>Sneakeet Admin Panel</title>
</head>

<body class="bg-gray-100 flex justify-center items-center h-screen">
  <div class="container mx-auto">
    <h1 class="text-3xl font-bold mb-4 text-center">Sneakeet Admin Panel</h1>
    <a href="/admin/products/new" class="block text-center underline text-blue-500 hover:text-blue-600 mb-4">
      Add Product
    </a>
    <div class="overflow-x-auto bg-white rounded-lg shadow-md p-4">
      <table class="table-auto w-full border border-gray-300">
        <thead>
          <tr class="bg-gray-800 text-white">
            <th class="px-4 py-2">ID</th>
            <th class="px-4 py-2">Name</th>
            <th class="px-4 py-2">Brand</th>
            <th class="px-4 py-2">Price</th>
            <th class="px-4 py-2">Description</th>
            <th class="px-4 py-2">Category</th>
            <th class="px-4 py-2">Sizes</th>
            <th class="px-4 py-2">Colors</th>
            <th class="px-4 py-2">Availability</th>
            <th class="px-4 py-2">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach((product) => { %>
            <tr class="border-b border-gray-300">
              <td class="px-4 py-2 border border-gray-300"><%= product._id %></td>
              <td class="px-4 py-2 border border-gray-300"><%= product.name %></td>
              <td class="px-4 py-2 border border-gray-300"><%= product.brand %></td>
              <td class="px-4 py-2 border border-gray-300"><%= product.price %></td>
              <td class="px-4 py-2 border border-gray-300"><%= product.description %></td>
              <td class="px-4 py-2 border border-gray-300"><%= product.category.join(', ') %></td>
              <td class="px-4 py-2 border border-gray-300"><%= product.sizes.join(', ') %></td>
              <td class="px-4 py-2 border border-gray-300"><%= product.colors.join(', ') %></td>
              <td class="px-4 py-2 border border-gray-300"><%= product.availability ? 'Available' : 'Not Available' %></td>
              <td class="px-4 py-2 border border-gray-300 flex items-center space-x-2">
                <a href="/admin/products/<%= product._id %>" class="text-blue-500 underline hover:text-blue-600">View</a>
                <a href="/admin/products/<%= product._id %>/edit" class="text-yellow-500 underline hover:text-yellow-600">Edit</a>
                <a href="/admin/products/<%= product._id %>/delete" class="text-red-500 underline hover:text-red-600">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>

</html>
